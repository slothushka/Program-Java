import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

         float P = sc.nextFloat();   // P indicates the principal amount
         float R = sc.nextFloat();   // R indicates the rate
         float T = sc.nextFloat();  // T indicates the time

        float SI = P*R*T/100;

        System.out.println("The simple interest of the given data is :  "+ SI);






}
}
